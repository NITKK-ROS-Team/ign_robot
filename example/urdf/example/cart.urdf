<?xml version="1.0"?>
<robot name="diff_drive" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- 車体要素 -->
  <link name="chassis">
    <collision>
      <origin xyz="-0 -0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1 0.568726"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="-0 -0 0.5" rpy="0 0 0"/>
      <geometry>
        <box size="2.5 1 0.568726"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <inertial>
      <origin xyz="-0.151427 -0 0.5" rpy="0 0 0"/>
      <mass value="1.14395"/>
      <inertia
        ixx="0.126164"
        ixy="0.0"
        ixz="0.0"
        iyy="0.416519"
        iyz="0.0"
        izz="0.481014"/>
    </inertial>
  </link>
<!-- END OF 車体要素 -->

<!-- 車輪要素 -->
  <!-- left wheel Link -->
  <link name="left_wheel">
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.3"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.3"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>

    <inertial>
      <mass value="2"/>
      <inertia ixx="0.145833"
               ixy="0.0"
               ixz="0.0"
               iyy="0.145833"
               iyz="0.0"
               izz="0.125"/>
    </inertial>
  </link>
  <!-- right wheel Link -->
  <link name="right_wheel">
    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.3"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.3"/>
      </geometry>
      <material name="red"/>
    </visual>

    <inertial>
      <mass value="2"/>
      <inertia ixx="0.145833"
               ixy="0.0"
               ixz="0.0"
               iyy="0.145833"
               iyz="0.0"
               izz="0.125"/>
      </inertial>
  </link>
<!-- END OF 車輪要素 -->

<!-- 車輪ジョイント -->
  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0 0.625029 0.3" rpy="-1.5707 0 0"/>
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.2"/>
  </joint>
  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0 -0.625029 0.3" rpy="-1.5707 0 0"/>
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.2"/>
  </joint>
<!-- END OF 車輪ジョイント -->

<!-- キャスターのジョイント -->
  <joint name="caster_back_joint" type="fixed">
    <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="caster_back"/>
  </joint>
  <joint name="caster_front_joint" type="fixed">
    <origin xyz="0.957138 -0 0.2" rpy="0 0 0"/>
    <parent link="chassis"/>
    <child link="caster_front"/>
  </joint>
<!-- END OF キャスターのジョイント -->

<!-- キャスター要素 -->
  <link name="caster_back">
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>

    <inertial>
      <origin xyz="-0.957138 -0 0.2" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia
        ixx="0.1"
        ixy="0.0"
        ixz="0.0"
        iyy="0.1"
        iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>
  <link name="caster_front">
    <collision>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
    </collision>

    <visual>
      <geometry>
        <sphere radius="0.2"/>
      </geometry>
      <material name="white"/>
    </visual>

    <inertial>
      <origin xyz="0.957138 -0 0.2" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia
        ixx="0.1"
        ixy="0.0"
        ixz="0.0"
        iyy="0.1"
        iyz="0.0"
        izz="0.1"/>
    </inertial>
  </link>
<!-- END OF キャスター要素 -->


<!-- root : leg1 -->
  <!-- 直動棒 -->
  <link name="slideBar">
    <visual>
      <geometry>
        <box size="0.05 0.05 2"/>
      </geometry>
      <origin xyz="0 0 0"/>
      <material name="red"/>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <!-- 直動カート -->
  <link name="cart">
    <visual>
      <geometry><box size="1.0 1.0 0.01"/></geometry>
      <origin xyz="0 0 0"/>
    </visual>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- 直動端a  (root) -->
  <link name="leg1">
    <visual>
      <geometry><box size="0.2 0.2 0.2"/></geometry><origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry><box size="0.2 0.2 0.2"/></geometry><origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <!-- 直動端b -->
  <link name="leg2">
    <visual>
      <geometry><box size="0.2 0.2 0.2"/></geometry><origin xyz="0 0 0"/>
    </visual>
    <collision>
      <geometry><box size="0.2 0.2 0.2"/></geometry><origin xyz="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>
  <!-- imu -->
  <link name="imu">
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="1.0" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.0"/>
    </inertial>
  </link>

  <!-- ジョイント -->
  <!-- 直動移動のパラメータ -->
  <joint name="slider_to_cart" type="prismatic">
    <!-- 軸の方向 -->
    <axis xyz="0 0 1"/>
    <origin xyz="-0.4 0.0 0.0"/>
    <parent link="slideBar"/>
    <child link="cart"/>
    <!-- 初期位置からの移動方向 (-0.5 <===> 0.5) -->
    <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="30"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint name="cart_to_imu" type="fixed">
    <origin xyz="0.0 0.0 0.0"/>
    <parent link="cart"/>
    <child link="imu"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint name="leg1_to_slider" type="fixed">
    <origin xyz="0.0 0.0 1"/>
    <parent link="leg1"/>
    <child link="slideBar"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <joint name="leg1_to_leg2" type="fixed">
    <origin xyz="0.0 0.0 2"/>
    <parent link="leg1"/>
    <child link="leg2"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>

  <!-- 直動のつなぎ目 -->
  <joint name="chassis_to_leg1" type="fixed">
    <origin xyz="-0.19 0.0 1.2" rpy="0 0.5 0"/>
    <parent link="chassis"/>
    <child link="leg1"/>
    <dynamics damping="0.0" friction="0.0"/>
  </joint>


<!-- ignition -->
  <ros2_control name="IgnitionSystem" type="system">
    <hardware>
      <plugin>ign_ros2_control/IgnitionSystem</plugin>
    </hardware>

    <!-- 直動のros-control -->
    <joint name="slider_to_cart">
      <command_interface name="velocity">
        <param name="min">-1.0</param>
        <param name="max">1.0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
    <sensor name="cart_imu_sensor">
      <state_interface name="orientation.x"/>
      <state_interface name="orientation.y"/>
      <state_interface name="orientation.z"/>
      <state_interface name="orientation.w"/>
      <state_interface name="angular_velocity.x"/>
      <state_interface name="angular_velocity.y"/>
      <state_interface name="angular_velocity.z"/>
      <state_interface name="linear_acceleration.x"/>
      <state_interface name="linear_acceleration.y"/>
      <state_interface name="linear_acceleration.z"/>
    </sensor>
    
    <!-- 車輪のros-control -->
    <joint name="left_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    <joint name="right_wheel_joint">
      <command_interface name="velocity">
        <param name="min">-1</param>
        <param name="max">1</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>
<!-- END OF Ignition SYSTEM -->



<!-- Gazebo -->
  <gazebo>
    <!-- Joint state publisher -->
    <plugin filename="ign_ros2_control-system" name="ign_ros2_control::IgnitionROS2ControlPlugin">
      <parameters>$(find ign_robot)/config/ign_robot_config.yaml</parameters>
    </plugin>

    <plugin
      filename="ignition-gazebo-imu-system"
      name="ignition::gazebo::systems::Imu">
    </plugin>
  </gazebo>

  <!-- imu publisher -->
  <gazebo reference="imu">
    <sensor name="cart_imu_sensor" type="imu">
      <always_on>1</always_on>
      <update_rate>10.0</update_rate>
      <visualize>true</visualize>
      <topic>imu</topic>
    </sensor>
  </gazebo>
<!-- END OF GAZEBO -->


</robot>
